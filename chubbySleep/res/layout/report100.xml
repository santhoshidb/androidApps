<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:id="@+id/Scroll1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:padding="6px" android:background="#FFFFFF">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
        android:id="@+id/R1Layout"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:scrollbars="vertical" android:background="#FFFFFF">
 <TableLayout
        android:layout_height="wrap_content"
        android:id="@+id/TableLayout01"
        android:layout_width="wrap_content">
 <TableRow>
 	<TextView android:scrollHorizontally="false" android:id="@+id/reporth1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/reportHeader" android:textStyle="bold" android:padding="5dp" android:textSize="20dp" android:textColor="#000000"/>
 </TableRow>
</TableLayout><TableLayout android:layout_height="wrap_content" android:id="@+id/TableLayout02" android:layout_width="wrap_content" android:layout_below="@+id/TableLayout01">
 <TableRow android:paddingBottom="10px">
 	
 	<TextView android:scrollHorizontally="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:text="Your Score" android:padding="10dp" android:textSize="15dp" android:textColor="#000000"/>
 </TableRow>
 
</TableLayout><TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@id/TableLayout02" android:id="@+id/TableLayout03">
        <TableRow>
        	<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="10dp"></TextView>
        	<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerCrop" android:background="@drawable/scorebox75100"/>
        
</TableRow>
    </TableLayout>
<TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/TableLayout04" android:layout_below="@+id/TableLayout03">
 <TableRow android:paddingBottom="10px" android:paddingTop="10px">
 	
 	<TextView android:scrollHorizontally="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:text="Why did you get this score?" android:padding="10dp" android:textSize="15dp" android:textColor="#000000"/>
 	
 
</TableRow>
 <TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="12dp" android:paddingRight="4dp" android:text="Congratulations! Your child is an excellent sleeper!" android:textSize="12dp" android:textColor="#000000"></TextView>
</TableRow>

</TableLayout>
<TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableLayout06" android:layout_below="@+id/TableLayout04">
 <TableRow>
 	
 	
 <TextView android:scrollHorizontally="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:text="About Sleep Percentile Scores" android:padding="10dp" android:textSize="15dp" android:textColor="#000000"/></TableRow>
 <TableRow>
 	
 	<TextView android:scrollHorizontally="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="false" android:text="This test measure how well your child sleeps with respect to his/her peers. Knowing your child's percentile can help assess whether your child is getting enough sleep and whether any special strategies need to be applied to help your child sleep better." android:paddingLeft="12dp" android:paddingRight="4dp" android:textColor="#000000" android:textSize="12dp"/>
 </TableRow>
 <TableRow>
 	<TextView android:id="@+id/totalsreason" android:scrollHorizontally="false" android:singleLine="false" android:gravity="left" android:textSize="12dp" android:textColor="#000000" android:layout_gravity="left" android:layout_height="wrap_content" android:layout_width="wrap_content" android:minLines="2"/>
 	<TextView android:id="@+id/longsreason" android:scrollHorizontally="false" android:layout_height="wrap_content" android:singleLine="false" android:layout_margin="4px" android:gravity="left" android:textSize="12dp" android:textColor="#000000" android:minLines="2" android:layout_width="wrap_content"/>
 </TableRow>
</TableLayout></RelativeLayout></ScrollView>
